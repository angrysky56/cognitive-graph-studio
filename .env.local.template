# Cognitive Graph Studio - Environment Configuration
# Copy this file to .env.local and configure your settings

# =============================================================================
# ü§ñ AI Service Configuration
# =============================================================================

# Google Gemini API (Preferred - Free Tier Available)
# Get your API key from: https://aistudio.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# LM Studio Configuration (Local AI)
# Download from: https://lmstudio.ai/
VITE_LMSTUDIO_BASE_URL=http://localhost:1234
VITE_LMSTUDIO_MODEL=local-model

# Ollama Configuration (Local AI)  
# Download from: https://ollama.ai/
VITE_OLLAMA_BASE_URL=http://localhost:11434
VITE_OLLAMA_MODEL=qwen2.5:latest

# =============================================================================
# üîç Vector Search Configuration
# =============================================================================

# Vector database settings for semantic search
VITE_VECTOR_DIMENSIONS=768
VITE_VECTOR_MAX_VECTORS=10000
VITE_VECTOR_PERSISTENCE_ENABLED=true
VITE_VECTOR_PERSISTENCE_PATH=./data/vectors

# =============================================================================
# üå≥ TreeQuest Configuration (AI-Powered Graph Exploration)
# =============================================================================

# TreeQuest algorithm settings
VITE_TREEQUEST_ALGORITHM=abmcts-a
VITE_TREEQUEST_MAX_SIMULATIONS=100
VITE_TREEQUEST_TIME_LIMIT=30
VITE_TREEQUEST_EXPLORATION_CONSTANT=1.414

# =============================================================================
# üé® Application Configuration
# =============================================================================

# Application theme and behavior
VITE_APP_THEME=dark
VITE_APP_DEBUG=true

# Graph visualization settings
VITE_GRAPH_MAX_NODES=1000
VITE_GRAPH_PHYSICS_ENABLED=true
VITE_GRAPH_AUTO_LAYOUT=force

# =============================================================================
# üîß Development Configuration
# =============================================================================

# Development server settings
VITE_DEV_HOST=localhost
VITE_DEV_PORT=5174

# Enable development features
VITE_DEV_SHOW_PERFORMANCE=true
VITE_DEV_ENABLE_DEBUGGING=true

# =============================================================================
# üìä Analytics and Monitoring (Optional)
# =============================================================================

# Application monitoring (leave empty to disable)
VITE_ANALYTICS_ENABLED=false
VITE_ERROR_REPORTING_ENABLED=false

# =============================================================================
# üíæ Data Storage Configuration
# =============================================================================

# Local data storage paths
VITE_DATA_DIRECTORY=./data
VITE_BACKUP_ENABLED=true
VITE_BACKUP_INTERVAL=300000
VITE_AUTO_SAVE_ENABLED=true
VITE_AUTO_SAVE_INTERVAL=30000